@model UserManagementCRUDApplication.Models.UpdateUserViewModel;

@{
    ViewData["Title"] = "Edit User Details";
}

<h1>Update User Details</h1>
<form method="post" action="View" class="mt-4">
    <div class="mb-3">
        <label for="" class="form-label">User ID</label>
        <input type="text" class="form-control" , asp-for="Id" readonly>
    </div>

    <div class="mb-3">
        <label for="" class="form-label">User Name</label>
        <input type="text" class="form-control" , asp-for="UserName">
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Real Name</label>
        <input type="text" class="form-control" , asp-for="RealName">
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Email Address</label>
        <input type="email" class="form-control" , asp-for="Email">
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Password</label>
        <input type="text" class="form-control" , asp-for="Password">
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Date Of Birth</label>
        <input type="date" class="form-control" , asp-for="DateOfBirth">
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <button type="submit" class="btn btn-primary" asp-action="Delete" asp-controller="Users">Delete</button>
</form>