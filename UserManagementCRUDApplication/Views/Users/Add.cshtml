@model UserManagementCRUDApplication.Models.AddUserViewModel

@{
    ViewData["Title"] = "Add a User";
}

<h1>Create New User</h1>
<form method="post" action="Add" class="mt-4">

    <div class="mb-3">
        <label for="" class="form-label">User Name</label>
        <input type="text" class="form-control" , asp-for="UserName">
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Real Name</label>
        <input type="text" class="form-control" , asp-for="RealName">
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Email Address</label>
        <input type="email" class="form-control" , asp-for="Email">
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Password</label>
        <input type="password" class="form-control" , asp-for="Password">
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Date Of Birth</label>
        <input type="date" class="form-control" , asp-for="DateOfBirth">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>